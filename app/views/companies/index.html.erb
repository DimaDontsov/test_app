<p id="notice"><%= notice %></p>

<h1>Компании</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= link_to 'Просмотр', company %></td>
        <td><%= link_to 'Изменить', edit_company_path(company) %></td>
        <td><%= link_to 'Удалить', company, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить компанию в список', new_company_path %>
