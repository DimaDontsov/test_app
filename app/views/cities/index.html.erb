<p id="notice"><%= notice %></p>

<h1>Города</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Регион</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= city.region.name %></td>
        <td><%= link_to 'Изменить', edit_city_path(city) %></td>
        <td><%= link_to 'Удалить', city, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить город к списку', new_city_path %>
