<%= form_with(model: region, local: true) do |form| %>
  <% if region.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h2><%= pluralize(region.errors.count, "error") %> prohibited this region from being saved:</h2>

      <ul>
      <% region.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Название региона" %> <br>
    <%= form.text_field :name, id: :region_name %>
  </div>

  <div class="field">
    <%= form.label :country_id, "Cтрана, в которой расположен регион" %> <br>
    <%= form.select :country_id, Country.all.collect{|c| [c.name, c.id]} %>
  </div>

  <div class="actions">
    <br>
    <%= form.submit "Cохранить" %>
  </div>
<% end %>
