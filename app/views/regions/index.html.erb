<p id="notice"><%= notice %></p>

<h1 align="center">Регионы</h1>

<a href= <%=new_region_path%> role="button" class="btn btn-primary">Добавить регион</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @regions.sort_by{|region|[region.name]}.each do |region| %>
      <tr>
        <td><%= link_to region.name, region %></td>
        <td><%= region.country.name %></td>
        <td>
          <a href= <%=edit_region_path(region)%> role="button" class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span>
          </a>
          <%= link_to 'Удалить', region, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>