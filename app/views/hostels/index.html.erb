<p id="notice"><%= notice %></p>

<h1>Турбазы</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Цена, руб.</th>
      <th>Страна, Регион, Город</th>
      <th>Адрес</th>
      <th>Описание</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @hostels.sort_by{|hostel|[hostel.name]}.each do |hostel| %>
      <tr>
        <td><%= link_to hostel.name, hostel %></td>
        <td><%= hostel.price %></td>
        <td>
          <%= hostel.city.region.country.name %>, <br>
          <%= hostel.city.region.name %>, <br>
          <%= hostel.city.name %>
        </td>
        <td><%= hostel.address %></td>
        <td><%= hostel.about %></td>
        <td>
          <%= link_to 'Изменить', edit_hostel_path(hostel) %>
          <%= link_to 'Удалить', hostel, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить турбазу в список', new_hostel_path %>
