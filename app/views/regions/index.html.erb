<p id="notice"><%= notice %></p>

<h1>Регионы</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.country.name %></td>
        <td><%= link_to 'Просмотр', region %></td>
        <td><%= link_to 'Изменить', edit_region_path(region) %></td>
        <td><%= link_to 'Удалить', region, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить регион в список', new_region_path %>
