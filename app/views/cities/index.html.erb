<p id="notice"><%= notice %></p>

<h1 align="center">Города</h1>

<a href= <%=new_city_path%> role="button" class="btn btn-primary">Добавить город</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Регион</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @cities.sort_by{|city|[city.name]}.each do |city| %>
      <tr>
        <td><%= link_to city.name, city %></td>
        <td><%= city.region.name %></td>
        <td>
          <a href= <%=edit_city_path(city)%> role="button" class="btn btn-primary">
            <span class="glyphicon glyphicon-pencil"></span>
          </a>
          <%= link_to 'Удалить', city, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>