<p id="notice"><%= notice %></p>

<h1>Страны</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @countries.sort_by{|country|[country.name]}.each do |country| %>
      <tr>
        <td><%= link_to country.name, country %></td>
        <td>
          <%= link_to 'Изменить', edit_country_path(country) %>
          <%= link_to 'Удалить', country, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить страну в список', new_country_path %>
