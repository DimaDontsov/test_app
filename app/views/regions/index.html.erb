<p id="notice"><%= notice %></p>

<h1>Регионы</h1>

<table border=3; border-color="black" ; style="width:100%; height:100%; text-align:center">
  <thead>
    <tr>
      <th>Название</th>
      <th>Страна</th>
      <th>Действия</th>
    </tr>
  </thead>

  <tbody>
    <% @regions.sort_by{|region|[region.name]}.each do |region| %>
      <tr>
        <td><%= link_to region.name, region %></td>
        <td><%= region.country.name %></td>
        <td>
          <%= link_to 'Изменить', edit_region_path(region) %>
          <%= link_to 'Удалить', region, method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить регион в список', new_region_path %>
