<p id="notice"><%= notice %></p>

<h1>Турбазы</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Цена</th>
      <th>Адрес</th>
      <th>Описание</th>
      <th>Город</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hostels.each do |hostel| %>
      <tr>
        <td><%= link_to hostel.name, hostel %></td>
        <td><%= hostel.price %></td>
        <td><%= hostel.address %></td>
        <td><%= hostel.about %></td>
        <td><%= hostel.city.name %></td>
        <td><%= link_to 'Изменить', edit_hostel_path(hostel) %></td>
        <td><%= link_to 'Удалить', hostel, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить турбазу в список', new_hostel_path %>
